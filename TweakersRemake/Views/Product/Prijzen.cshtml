
@{
    ViewBag.Title = "Prijzen";
}
@using NET_MVC_Application.Models
@model NET_MVC_Application.Models.Product
<h2>Prijzen</h2>

<div>
    @Html.HiddenFor(p => Model.Id)
    @Html.DisplayFor(p => Model.Naam)
    @Html.DisplayFor(p => Model.Categorie)


</div>
<div
     @foreach (Product_Link Pr in Model.Links)
     {
         using (Html.BeginForm())
         {

             @Html.DisplayFor(m => Pr.Uitgever);
              @Html.DisplayFor(m => Pr.Prijs);
              @Html.DisplayFor(m => Pr.Levertijd);

         }
     }
></div>

